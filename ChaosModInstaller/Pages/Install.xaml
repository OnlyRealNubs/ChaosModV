<Page x:Class="ChaosModInstaller.Install"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ChaosModInstaller"
      mc:Ignorable="d" 
      Title="Install" Height="268" Width="476" Background="#FF232844">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="130"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="40"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <local:LoadingControl Grid.Row="0" Diameter="80" Color1="Green" Color2="#FF232844" VerticalAlignment="Bottom" HorizontalAlignment="Center"/>
        <Label x:Name="output_lbl" Grid.Row="2" VerticalAlignment="Top" HorizontalAlignment="Center" Content="Output" Foreground="White" FontFamily="Comic Sans MS"/>
        <Button x:Name="next_btn" Grid.Row="3" VerticalAlignment="Center" HorizontalAlignment="Center" Width="100" Height="25" Content="Finish" Background="Green" Foreground="White" Visibility="Hidden"/>
    </Grid>
</Page>
